<h1>Sign up</h1>
<%= form_tag "/sign_up", method: "post" do %>
  <%= email_field_tag :email, "", placeholder: "Email" %>
  <%= text_field_tag :username, "", placeholder: "Username" %>
  <%= password_field_tag :password, "", placeholder: "Password" %>
  <%= password_field_tag :password_confirmation, "", placeholder: "Confirm Password" %>
  <%= submit_tag "Submit" %>
<% end %>
